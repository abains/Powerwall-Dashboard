# Configuration for Local ROI Script
PW_INSTALL_COST=15685
PW_INSTALL_DATE=2021-11-11
INFLUXDB_HOST=raspberrypi.local

# Medical Baseline Support
# Set to 'true' to use Tier 1 rates (approximate for high baseline allowance)
# Set to 'false' to use Tier 2 rates (standard marginal rate for high usage)
PW_MEDICAL_BASELINE=true

# Baseline Allowance (kWh per day)
# Standard allowance varies by region/season (approx 10-20 kWh)
# Medical Baseline adds ~16.5 kWh/day (500 kWh/month)
PW_BASELINE_DAILY_ALLOWANCE=16.5

# Optional: Override Rates (Defaults shown for 2024)
# PW_ROI_RATE_2024_SUMMER_PEAK_TIER1=0.51
# PW_ROI_RATE_2024_SUMMER_PEAK_TIER2=0.62
